<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center">

    <TextView
        android:id="@+id/lbl_your_name" android:text="Task Name"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/abc_search_url_text_selected"/>

    <EditText
        android:id="@+id/txt_title"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_marginRight="30dp"
        android:textColor="?attr/actionMenuTextColor"
        android:layout_below="@+id/lbl_your_name"
        android:layout_alignLeft="@+id/lbl_your_name"
        android:layout_alignStart="@+id/lbl_your_name"/>

    <TextView
        android:text="Due Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:layout_below="@+id/txt_title"
        android:layout_alignLeft="@+id/lbl_your_name"
        android:layout_alignStart="@+id/lbl_your_name"
        android:textColor="@color/abc_search_url_text_selected"/>

    <DatePicker
        android:datePickerMode="spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignRight="@+id/txt_title"
        android:layout_alignEnd="@+id/txt_title"/>

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/saveButton"/>


</RelativeLayout>
